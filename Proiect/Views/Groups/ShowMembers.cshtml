
<div class="container">

    <div class="item moderatori wallpaperIndex text-white p-5">

<h2>Afisare moderatori</h2>
<br />

@foreach (Proiect.Models.UserGroup user in ViewBag.users)
{
    if (user.IsModerator)
    {
        <div class="card-body">
            <h3 class="card-title py-3 px-3 rounded-2">@user.User.UserName</h3>

            @*@if (ViewBag.isAdmin)
            {
                <h3 class="card-title py-3 px-3 rounded-2">@user.UserId</h3>
            }*@
        </div>
    }
}
<br /><br />

</div>

    <div class="item useri wallpaperIndex text-white p-5">

<h2>Afisare useri</h2>
<br />

@foreach (Proiect.Models.UserGroup user in ViewBag.users)
{
    if (! user.IsModerator && user.IsAccepted)
    {
        <div class="card-body">
            <h3 class="card-title py-3 px-3 rounded-2">@user.User.UserName</h3>

            @*@if (ViewBag.isAdmin)
            {
                <h3 class="card-title py-3 px-3 rounded-2">@user.UserId</h3>
            }*@

            @if ((ViewBag.userGroup != null && ViewBag.userGroup.IsModerator) || ViewBag.isAdmin)
            {
                <form method="post" asp-route-groupId="@user.GroupId" asp-route-userId="@user.UserId" asp-action="MakeModerator">

                    <button class="btn btn-danger" type="submit">Make moderator</button>

                </form>
                <br />

                <form method="post" asp-route-groupId="@user.GroupId" asp-route-userId="@user.UserId" asp-action="RemoveUser">

                    <button class="btn btn-danger" type="submit">Remove user</button>

                </form>
                <br />
            }
        </div>
    }
}

</div>

</div>