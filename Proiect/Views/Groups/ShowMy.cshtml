@{
    ViewBag.Title = "My groups";
}
<h2>Afisare grupurile mele</h2>
<br />
@if (ViewBag.Message != null)
{
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

@foreach (var group in ViewBag.numeGrupuri)
{
     <div class="card">


        <div class="card-body">

            <h3 class="card-title alert-success py-3 px-3 rounded-2">@group</h3>

            

           

        </div>





        <a class="btn btn-success" href="/Groups/Index/">Afisare grupuri</a>

        <br />

    </div>
}
