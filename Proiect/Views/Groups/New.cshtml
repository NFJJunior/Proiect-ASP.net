@model Proiect.Models.Group
<div class="wallpaperIndex vh-100">


<h2 class="text-center p-5 text-white">Adaugare grup</h2>
<br />

    <div class="container mt-5 text-white">
        <div class="row">
        <div class="offset-1">

            @using (Html.BeginForm(actionName: "New", controllerName: "Groups",
            method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Name", "Nume Grup")
                <br />
                @Html.TextBox("Name", null, new { @class = "form-control " })

                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Description", "Descriere Grup")
                <br />

                @Html.TextBox("Description", null, new { @class = "form-control" })

                @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
                <br />

                <br />

                <label>Selectati categoria</label>
                @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.AllCategories, "Value", "Text"),
                "Selectati categoria", new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="bg-info text-white btn-lg" type="submit">Adauga grup</button>

            }

        </div>
    </div>
    </div>
</div>
