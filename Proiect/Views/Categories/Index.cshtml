<div class="center text-white">

    @{
        ViewBag.Title = "Lista categorii";
    }

    <h2>@ViewBag.Title</h2>
    <br />

    @foreach (var category in ViewBag.Categories)
    {
        @Html.Label("CategoryName", "Denumire categorie")
        <p>@category.CategoryName</p>
        <a class="btn alert-success" href="/Categories/Show/@category.Id">Afisare categorie</a>
        <a class="btn btn-warning" href="/Categories/Edit/@category.Id">Editare categorie</a>
        <br />
        <hr />
        <br />
    }
    <br />
    <a class="btn btn-info" href="/Categories/New">Adauga o noua categorie</a>
    <br />
</div>